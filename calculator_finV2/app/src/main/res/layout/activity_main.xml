<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#292B29"
    android:orientation="vertical"
    android:weightSum="6"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/screen"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:layout_weight="1"
        android:background="#4E4B4B"
        android:gravity="center|right"
        android:padding="5dp"
        android:textColor="#FF9800"
        android:textSize="30sp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/ac"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#D32F2F"
            android:onClick="onClickButton"
            android:text="AC"
            android:textColor="#000000"
            android:textSize="20dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/back"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#D32F2F"
            android:onClick="onClickButton"
            android:text="C"
            android:textColor="#000000"
            android:textSize="25dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/power"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#B7703A"
            android:onClick="onClickButton"
            android:text="^"
            android:textColor="#000000"
            android:textSize="30dp" />



        <com.google.android.material.button.MaterialButton
            android:id="@+id/div"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#FFB7703A"
            android:onClick="onClickButton"
            android:text="/"
            android:textColor="#000000"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/seven"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#FB8F0A"
            android:onClick="onClickButton"
            android:text="7"
            android:textColor="#000000"
            android:textSize="30dp"
            app:backgroundTint="#00FFFFFF" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/eight"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#FFFB8F0A"
            android:onClick="onClickButton"
            android:text="8"
            android:textColor="#000000"
            android:textSize="30dp"
            app:backgroundTint="#00FFFFFF" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/nine"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#FFFB8F0A"
            android:onClick="onClickButton"
            android:text="9"
            android:textColor="#000000"
            android:textSize="30dp"
            app:backgroundTint="#00FFFFFF" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/mul"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#FFB7703A"
            android:onClick="onClickButton"
            android:text="X"
            android:textColor="#000000"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/four"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#FFFB8F0A"
            android:onClick="onClickButton"
            android:text="4"
            android:textColor="#000000"
            android:textSize="30dp"
            app:backgroundTint="#00FFFFFF" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/five"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#FFFB8F0A"
            android:onClick="onClickButton"
            android:text="5"
            android:textColor="#000000"
            android:textSize="30dp"
            app:backgroundTint="#00FFFFFF" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/six"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#FFFB8F0A"
            android:onClick="onClickButton"
            android:text="6"
            android:textColor="#000000"
            android:textSize="30dp"
            app:backgroundTint="#00FFFFFF" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/minus"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#FFB7703A"
            android:onClick="onClickButton"
            android:text="-"
            android:textColor="#000000"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/one"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#FFFB8F0A"
            android:onClick="onClickButton"
            android:text="1"
            android:textColor="#000000"
            android:textSize="30dp"
            app:backgroundTint="#00FFFFFF" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/two"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#FFFB8F0A"
            android:onClick="onClickButton"
            android:text="2"
            android:textColor="#000000"
            android:textSize="30dp"
            app:backgroundTint="#00FFFFFF" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/three"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#FFFB8F0A"
            android:onClick="onClickButton"
            android:text="3"
            android:textColor="#000000"
            android:textSize="30dp"
            app:backgroundTint="#00FFFFFF" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/plus"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#FFB7703A"
            android:onClick="onClickButton"
            android:text="+"
            android:textColor="#000000"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">



        <com.google.android.material.button.MaterialButton
            android:id="@+id/point"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#FFFB8F0A"
            android:onClick="onClickButton"
            android:text="."
            android:textColor="#000000"
            android:textSize="30dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/zero"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#FFFB8F0A"
            android:onClick="onClickButton"
            android:text="0"
            android:textColor="#000000"
            android:textSize="30dp"
            app:backgroundTint="#00FFFFFF" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/ans"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#81ACBD"
            android:onClick="onClickButton"
            android:text="Mem"
            android:textColor="#000000"
            android:textSize="15dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/equals"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#81ACBD"
            android:onClick="onClickButton"
            android:text="="
            android:textColor="#000000"
            android:textSize="30dp" />
    </LinearLayout>

</LinearLayout>